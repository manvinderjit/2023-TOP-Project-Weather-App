{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi-style": ["warn", "last"],
        "comma-dangle": "off",
        "semi": ["error", "always"]
    }
}
